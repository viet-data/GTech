                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="171dp"
                android:layout_height="174dp"
                android:text="test"
                android:textSize="34sp" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
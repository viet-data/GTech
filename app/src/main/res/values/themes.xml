        <item name="colorErrorContainer">@color/red_90</item>
        <item name="colorOnErrorContainer">@color/red_10</item>

        <item name="background">@color/gray_99</item>
        <item name="colorOnBackground">@color/gray_10</item>

        <item name="colorSurface">@color/gray_99</item>
        <item name="colorOnSurface">@color/gray_10</item>
        <item name="colorSurfaceInverse">@color/gray_20</item>
        <item name="colorOnSurfaceInverse">@color/gray_95</item>
        <item name="colorSurfaceVariant">@color/blue_gray_90</item>
        <item name="colorOnSurfaceVariant">@color/blue_gray_30</item>

        <item name="colorOutline">@color/blue_gray_50</item>
